{
  "name": "nostrssme",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:blog": "turbo run build --filter blog",
    "build:llm": "turbo run build --filter llm",
    "dev": "turbo run dev",
    "dev:blog": "turbo run dev --filter blog",
    "dev:llm": "turbo run dev --filter llm",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:llm": "turbo run test --filter llm"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
